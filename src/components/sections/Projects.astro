---
const projects = [
  {
    title: "Project One",
    description: "A brief description of the first project",
    tech: ["React", "Node.js", "MongoDB"],
    role: "Lead Developer",
    demo: "#",
    github: "#"
  }
];
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map(project => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
          <p class="text-gray-600 mb-4">{project.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tech.map(tech => (
              <span class="bg-gray-100 px-3 py-1 rounded-full text-sm">
                {tech}
              </span>
            ))}
          </div>
          <p class="mb-4"><strong>Role:</strong> {project.role}</p>
          <div class="flex gap-4">
            <a href={project.demo} class="text-primary hover:underline">Live Demo</a>
            <a href={project.github} class="text-primary hover:underline">GitHub</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>