<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-50 pt-16">
  <div class="container mx-auto px-6 py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="text-center md:text-left">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Hi, I'm <span class="text-primary">Your Name</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-8">
          Professional Title Here
        </p>
        <p class="text-lg text-gray-600 mb-12 max-w-lg mx-auto md:mx-0">
          A brief tagline about your expertise and what you're passionate about.
        </p>
        <div class="flex flex-col md:flex-row gap-4 justify-center md:justify-start">
          <a href="#projects" class="bg-primary text-white px-8 py-3 rounded-lg hover:bg-primary/90 transition-colors">
            View Projects
          </a>
          <a href="#connect" class="border-2 border-primary text-primary px-8 py-3 rounded-lg hover:bg-primary/10 transition-colors">
            Get in Touch
          </a>
        </div>
      </div>
      
      <div class="relative">
        <div class="w-64 h-64 md:w-80 md:h-80 mx-auto rounded-full overflow-hidden border-4 border-white shadow-lg">
          <img
            src="https://via.placeholder.com/400x400"
            alt="Your Name"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</section>