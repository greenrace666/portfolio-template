---
const research = {
  areas: ["Machine Learning", "Data Science", "Web Technologies"],
  projects: ["Project Alpha", "Project Beta"],
  publications: ["Publication 1", "Publication 2"]
};
---

<section id="research" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Research</h2>
    <div class="max-w-3xl mx-auto">
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold mb-4">Research Areas</h3>
          <ul class="list-disc list-inside space-y-2">
            {research.areas.map(area => <li>{area}</li>)}
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-4">Current Projects</h3>
          <ul class="list-disc list-inside space-y-2">
            {research.projects.map(project => <li>{project}</li>)}
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-4">Publications</h3>
          <ul class="list-disc list-inside space-y-2">
            {research.publications.map(pub => <li>{pub}</li>)}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>